#include <iostream>   

using namespace std;

 extern float* caculation(float a1,float a2,float a3);

// Main
int main(){
    float* c;
    c = caculation(1,2,5);
    if (c[0] == -1)
        cout << "Phuong trinh vo so nghiem" << endl;
    else
        cout << "So nghiem cua phuong trinh:" << c[0] <<endl;
    if (c[0] == 1)
        cout << "Nghiem cua phuong trinh: x = " << c[1] <<endl;
    else if (c[0] == 2)
        cout << "Nghiem cua phuong trinh: x1 = " << c[1] << "  x2 = " << c[2] <<endl;
    return 0;
}
